<div class="account">
  <div class="header col-xs-12">
    <div class="row">
      <div class="col-xs-12 text-center">
        <h5>Hello<br><strong>{{model.fullName}}</strong></h5>
        <div class="image" style="background:url('{{model.image}}') center no-repeat; background-size:cover;"></div>
      </div>
    </div>
  </div>

  <div class="input col-xs-12">
    <div class="row">
      <h5>Personal Information</h5>
      <div class="form-group">
        <label for="fullName">Full Name</label>
        {{input type="text" class="form-control" id="fullName" value=model.fullName}}
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        {{input type="email" class="form-control" id="email" value=model.email}}
      </div>
    </div>

    <div class="row">
      <h5>Account Information</h5>
      <div class="form-group">
        <label for="username">Username</label>
        {{input type="text" class="form-control" id="username" value=model.username}}
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        {{input type="password" class="form-control" id="password" value=model.password}}
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 text-left buttons">
        <button class="btn btn-danger">Delete Account</button>
      </div>

      <div class="col-xs-6 text-right buttons">
        <button class="btn btn-primary" {{action "invalidate"}}>Logout</button>
      </div>
    </div>
  </div>
</div>