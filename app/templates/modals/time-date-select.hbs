<div class="modal fade" tabindex="-1" role="dialog" id="timeDateSelect">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4>Departure Time</h4>
      </div>
      <div class="row modal-body text-center">
        <div class="col-xs-12">
          {{bootstrap-datepicker placeholder="Today" autoclose=true class="form-control" todayHighlight=true value=date format="dd/mm/yy"}}
        </div>

        <div class="col-xs-6">
          <select class="form-control" onchange={{action 'selectTime' value="target.value"}}>
            {{#each timeList as |time|}}
              <option value="{{time}}">{{time}}</option>
            {{/each}}
          </select>
        </div>
        <div class="col-xs-6">
          <select class="form-control" onchange={{action 'selectType' value="target.value"}}>
            <option value="AM">AM</option>
            <option value="PM">PM</option>
          </select>
        </div>
      </div>
      <div class="row modal-footer">
        <button type="button" class="btn btn-primary" {{action "finaliseInput"}}>DONE</button>
      </div>
    </div>
  </div>
</div>