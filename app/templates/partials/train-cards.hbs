<div class="cards">
  {{#each model as |train|}}
    <div class="card card-train" {{action "selectService" train}}>
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1 platform">
          Platform: {{train.platform}}
        </div>
      </div>
      <div class="row">
        <div class="col-xs-1 icon good">
          {{material-design-icon name='directions-transit'}}
        </div>
        <div class="col-xs-7 time">
          <div class="col-xs-3">{{train.std}}</div>
          <div class="col-xs-1 text-left">{{material-design-icon name='chevron-right'}}</div>
          <div class="col-xs-3">{{train.arrivalTime}}</div>
          <div class="col-xs-12">
            {{#if train.isDelayed}}<small>Departing: {{train.delayedDepartureTime}}</small>{{/if}}
          </div>
        </div>
        <div class="col-xs-4 status {{unless train.isDelayed "good"}} {{if train.isDelayed "bad"}}">
          {{train.status}}<br>
          <small>{{train.operator}}</small>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-9 col-xs-offset-1 destination">
          Destination: <strong>{{train.destination.name}}</strong>
        </div>

        <div class="col-xs-2 more">
          {{material-design-icon name='more-horiz'}}
        </div>

      </div>
    </div>
  {{else}}
    <div class="text-center listMessage">
      <h5>Station liked routes</h5>
    </div>
  {{/each}}
</div>