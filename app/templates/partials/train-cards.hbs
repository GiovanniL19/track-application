<div class="results-header">
  <div class="row">
    <div class="col-xs-1 col-sm-1"><a {{action "back"}}>{{material-design-icon name='chevron-left'}}</a></div>
    <div class="col-xs-11 col-sm-11 {{if service "col-xs-12"}}">
      <h5 class="text-right">{{origin.name}} to {{destination.name}}</h5>
    </div>
  </div>
</div>
<div class="cards list">
  {{#each model as |train|}}
    <div class="card card-train" {{action "selectService" train}}>
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1 col-sm-11 col-sm-offset-1 platform">
          Platform: {{train.platform}}
        </div>
      </div>
      <div class="row">
        <div class="col-xs-1 col-sm-1 icon good">
          {{material-design-icon name='directions-transit'}}
        </div>
        <div class="col-xs-7 col-sm-7 time">
          <div class="row">
            <div class="col-xs-3 col-sm-3">{{train.std}}</div>
            <div class="col-xs-1 col-sm-1 text-left">{{material-design-icon name='chevron-right'}}</div>
            <div class="col-xs-3 col-sm-3">{{train.arrivalTime}}</div>
          </div>
          <div class="col-xs-12 col-sm-12">
            {{#if train.isDelayed}}<small>Departing: {{train.delayedTime}}</small>{{/if}}
          </div>
        </div>
        <div class="col-xs-4 col-sm-4 status {{unless train.isDelayed "good"}} {{if train.isDelayed "bad"}}">
          {{train.status}}<br>
          <small>{{train.operator}}</small>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-9 col-sm-9 col-sm-offset-1 col-xs-offset-1 destination">
          Destination: <strong>{{train.destination.name}}</strong>
        </div>

        <div class="col-xs-2 col-sm-2 more">
          {{material-design-icon name='more-horiz'}}
        </div>

      </div>
    </div>
  {{else}}
    <div class="text-center listMessage">
      <h5>Station liked routes</h5>
    </div>
  {{/each}}
</div>