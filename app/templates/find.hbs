<div class="search">
  <div class="row">
    <div class="col-xs-5">
      <h5>Where to today?</h5>
    </div>

    <div class="col-xs-7 date-time">
      <div class="input-group">
        {{input type="text" class="form-control" placeholder="Today, now" readonly="true" describedby="dateTime"}}
        <span class="input-group-addon" id="dateTime">{{material-design-icon name='arrow-drop-down'}}</span>
      </div>
    </div>
  </div>
  <div class="row input-fields">
    <div class="form-group">
      <label for="from">from</label>
      <div class="input-group">
        {{input type="text" class="form-control" value=fromStation id="from" placeholder="e.g London Euston" describedby="from"}}
        <span class="input-group-addon" id="from">{{material-design-icon name='my-location'}}</span>
      </div>
    </div>
    <div class="form-group">
      <label for="to">to</label>
      {{input type="text" class="form-control" value=toStation id="to" placeholder="e.g Liverpool Lime Street"}}
    </div>
    <div class="row submit">
      <div class="col-xs-10 buttons">
        <button class="btn btn-primary">FIND TRAINS</button>
      </div>
      <div class="col-xs-2 buttons">
        <button class="btn btn-star">{{material-design-icon name='favorite-border'}}</button>
      </div>
    </div>
  </div>
  <small class="center text-center">BETA - Direct Route Only</small>
</div>

<div class="row cards-head">
  <div class="col-xs-8">
    <h5>Recommended Routes</h5>
