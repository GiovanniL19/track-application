<div class="register">
  <div class="row icon">
    {{#if userImage}}
      <span {{action "selectImage"}}>
        <div class="profilePicture" style="background:url('{{selectedImage.image}}'); background-size:cover;"></div>
      </span>
    {{else}}
      <span {{action "selectImage"}}>
        {{material-design-icon name='face'}}
        <h5>Hello! Iâ€™m Track, and you are?...</h5>
      </span>
    {{/if}}
  </div>

  <div class="row">
    <div class="form-group">
      <label for="newEmail">Email</label>
      {{input type="text" class="form-control" id="newEmail" value=email placeholder="email@example.com"}}
      <label for="fName">Full Name</label>
      {{input type="text" class="form-control" id="fName" value=fullName placeholder="Your Name"}}

      <label for="newPassword">Password</label>
      {{input type="password" class="form-control" id="newPassword" value=password placeholder="*******"}}
      {{upload-file type="file" id="selectImage" class="uploadImage" accept="image/*" file=selectedImage.image fileSize=selectedImage.imageSize fileType=selectedImage.imageType accept="image/*;capture=camera" capture="camera"}}
    </div>
  </div>

  <div class="row buttons text-center">
    <button class="btn btn-primary" {{action "registerAccount"}}>Register</button>
    <small>By registering an account with us, you accept to the terms and conditions. Your data is safe, we do not share information to third parties</small>
    {{#if emailExists}}
      <br><br>
      {{#link-to "login"}}Login Here{{/link-to}}
    {{/if}}
  </div>
</div>