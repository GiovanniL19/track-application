<div class="board">
  <div class="board-search">
    <div class="row">
      <div class="col-xs-5">
        <h5>Departure Board</h5>
      </div>
    </div>
    <div class="row input-fields">
      <div class="form-group">
        <div class="col-xs-8 col">
          <label for="station">Station</label>
          {{input type="text" class="form-control" value=station placeholder="e.g London Euston" describedby="station"}}
        </div>
        <div class="col-xs-4 col">
          <label for="type" class="type">Board</label>
          <select class="form-control type" onchange={{action 'selectType' value="target.value"}} describedby="type">
            <option value="AM">Departures</option>
            <option value="PM">Arrivals</option>
          </select>
        </div>
      </div>

      <div class="col-xs-12 submit">
        <div class="buttons">
          <button class="btn btn-primary">GET TRAINS</button>
        </div>
      </div>
    </div>
  </div>

  <div class="row cards-head">
    <div class="col-xs-4 text-right right col-xs-offset-8">
      {{#if station}}
        <button class="btn btn-message" {{action "showStationMessage"}}>{{material-design-icon name='message'}}</button>
      {{/if}}
    </div>
  </div>

  <div class="cards">
    {{#each trains as |train|}}
      <div class="card card-train">
        <div class="row">
          <div class="col-xs-11 col-xs-offset-1 platform">
            Platform: {{train.platform}}
          </div>
        </div>
        <div class="row">
          <div class="col-xs-1 icon good">
            {{material-design-icon name='directions-transit'}}
          </div>
          <div class="col-xs-8 time">
            <div class="col-xs-3">14:30</div>
            <div class="col-xs-1 text-left">{{material-design-icon name='chevron-right'}}</div>
            <div class="col-xs-3">19:15</div>
          </div>
          <div class="col-xs-3 status good">
            On Time
          </div>
        </div>

        <div class="row">
          <div class="col-xs-9 col-xs-offset-1 destination">
            Destination: <strong>{{train.destination}}</strong>
          </div>

          <div class="col-xs-2">
            {{material-design-icon name='more-horiz'}}
          </div>

        </div>
      </div>
    {{else}}
      <div class="text-center listMessage">
        <h5>Station not selected</h5>
      </div>
    {{/each}}
  </div>
</div>