      <div class="row">
        <div class="col-xs-11 col-xs-offset-1 platform">
          Platform 1
        </div>
      </div>
      <div class="row">
        <div class="col-xs-1 icon good">
          {{material-design-icon name='directions-transit'}}
        </div>
        <div class="col-xs-8 time">
          <div class="col-xs-3">14:30</div>
          <div class="col-xs-1 text-left">{{material-design-icon name='chevron-right'}}</div>
          <div class="col-xs-3">19:15</div>
        </div>
        <div class="col-xs-3 status good">
          On Time
        </div>
      </div>

      <div class="row">
        <div class="col-xs-9 col-xs-offset-1 destination">
          Destination: <strong>Glasgow Central</strong>
        </div>

