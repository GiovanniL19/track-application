<div class="board">
  <div class="board-search">
    <div class="row">
      <div class="col-xs-5">
        <h5>Departure Board</h5>
      </div>
    </div>
    <div class="row input-fields">
      <div class="form-group">
        <div class="col-xs-8 col">
          <label for="station">Station</label>
          {{input type="text" class="form-control" value=station placeholder="e.g London Euston" describedby="station"}}
        </div>
        <div class="col-xs-4 col">
          <label for="type" class="type">Board</label>
          {{input type="text" class="form-control type" value=type placeholder="Departure" describedby="type"}}
        </div>
      </div>

      <div class="col-xs-12 submit">
        <div class="buttons">
          <button class="btn btn-primary">GET TRAINS</button>
        </div>
      </div>
    </div>
  </div>

  <div class="row cards-head">
    <div class="col-xs-4 text-right right col-xs-offset-8">
      <button class="btn btn-message">{{material-design-icon name='message'}}</button>
    </div>
  </div>

  <div class="cards">
